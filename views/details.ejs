<html>
    <body>
        <head>Restaurant information: <%= datadoc.id %></head>
    <br>
    Borough: <%= datadoc.borough %> 
    <br>
    Curisine: <%= datadoc.curusine %>
    <br>
    <% if ( datadoc.photo) { %>
    Photo:
    <img src="data:image/jpg;base64, <%= datadoc.photo.image %>"><br>
    <% } %>
    Street: <%= datadoc.address.street %>
    <br>
    Building: <%= datadoc.address.building %>
    <br>
    Zipcode: <%= datadoc.address.zipcode %>
    <br>
    Coord: <%= datadoc.address.coord %>
    <br>
    <h3> Owned by: <%= datadoc.owner %> </h3>
    <br>
     <% if ( datadoc.grades.length > 0) { %>
        Grades:
            <ul>
            <% for (var r of datadoc.grades) { %>

            <li>Rating: <%= r.user %>  | <%= r.grades %>

        </li>

            <% } %>
        </ul>

            <% } else { %>
            This restaurant is not rated.<br>
            <% } %>
            <a href="/index"> <button>Return</button></a>

    </body>
</html>