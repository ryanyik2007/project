<html>
    <title>Edit restaurant</title>
    <body>
        <p>Please choose a restaurant to edit:</p>
        <% for (var r of restaurants) { %>
        <form action = "/update?_id=<%= r._id %>" method = "POST" enctype="multipart/form-data" >

            1. Restaurant ID : <input type = "text" name = "id" placeholder="ID" value="<%= r.id %>"><br>
            2. Name : <input type = "text" name = "name" value="<%= r.name %>" placeholder="Name" required><br>
            3. Borough : <input type = "text" name = "borough" placeholder="Borough" value="<%= r.borough %>"><br>
            4. Cuisine : <input type = "text" name = "cuisine" placeholder="Cuisine" value="<%= r.cuisine %>"><br>

            <% if(r.photo == null) { %>
            5. Photo : <input type = "file" name = "image" ><br>
            <% } else {%>
                5. Photo : <input type = "file" name = "image" value="<%= r.photo.image %>"><br>

                <% } %>
            6. Address :
            Street <input type = "text" name = "street" placeholder="Street" value="<%= r.address.street %>">
            Building <input type = "text" name = "building" placeholder="Building" value="<%= r.address.building%>">
            Zipcode <input type = "text" name = "zipcode" placeholder="Zipcode" value="<%= r.address.zipcode %>">
            Coord <input type = "text" name = "coord" placeholder="Longitude & Latitude" value="<%= r.address.coord  %>"><br>
            <% } %>

            <input type = "hidden" name = "owner" value="<%=r.owner %>" ><br>
            <br>
            <input type = "submit" value = "SUBMIT"></input>

    </form>
    </body>
</html>